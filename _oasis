Library "local_libs"
   Path: src/libs
   Modules : Misc_library, Maps
   BuildDepends : batteries


Library "reactions"	
  FindLibName : reactions
  FindLibParent : bacterie
  Path: src/bacterie
  Modules: Reactions
  

Library "molecule"	
  FindLibName : molecule
  FindLibParent : bacterie
  Path: src/bacterie
  Modules: Molecule
  BuildDepends: local_libs, yojson, ppx_deriving_yojson


Library "types"
  FindLibName : types
  FindLibParent : bacterie
  Path : src/bacterie
  Modules : Types
  BuildDepends : bacterie.molecule, ppx_deriving.show, yojson, ppx_deriving_yojson


Library "proteine"
  FindLibName : proteine
  FindLibParent : bacterie
  Path: src/bacterie
  Modules: Proteine
  BuildDepends: batteries, bacterie.molecule, local_libs, yojson


Library "bacterie"
  Path: src/bacterie
  Modules: Bacterie
  BuildDepends: local_libs, bacterie.proteine, bacterie.molecule,  batteries, bacterie.types


Library "serveur"
  Path: src/gui
  Modules: Serveur
  BuildDepends: unix, bacterie.proteine


Executable "test"
  Path : src/
  MainIs : test.ml
  BuildDepends : bacterie.proteine, bacterie.molecule,  batteries, bacterie.types, serveur
